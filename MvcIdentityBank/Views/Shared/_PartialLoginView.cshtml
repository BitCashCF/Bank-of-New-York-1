@if (User.Identity.IsAuthenticated)
{
    <li class="list-inline-item">
        @Html.ActionLink("Exit",
     "Logout",
     "Account",
     routeValues: null,
    htmlAttributes: new { @class = "btn btn-outline-danger",
        title = "Run out from here!}")
    </li>
}
else
{
    <li class="list-inline-item">
        @Html.ActionLink("Sign up",
     "Register",
     "Account",
     routeValues: null,
    htmlAttributes: new { @class = "btn btn-outline-success",
        title = "Run out from here!}")
    </li>
    <li class="list-inline-item">
        @Html.ActionLink("Sign in",
     "Login",
     "Account",
     routeValues: null,
    htmlAttributes: new { @class = "btn btn-outline-danger",
        title = "Run out from here!}")
    </li>
}